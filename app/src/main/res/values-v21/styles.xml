<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/metalGray</item>
        <item name="android:statusBarColor">@color/metalGray</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splash_screen_1_small</item>
        <item name="android:statusBarColor">@color/IndigoBlue</item>
        <item name="android:navigationBarColor">@color/IndigoBlue</item>
        <item name="android:windowBackground">@drawable/splash_screen_1_small</item>
    </style>

    <style name="AppTheme.Toolbar">
            <item name="android:background">@color/darkNavyBlue</item>
        <item name="android:elevation">10dp</item>
    </style>

</resources>
