<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">@drawable/splash_screen_1_small</item>
        <item name="android:windowBackground">@drawable/splash_screen_1_small</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentNavigation" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/darkNavyBlue</item>
    </style>
</resources>
